.tag-cloud
  &-list
    a
      display: inline-block
      padding: 0 8px
      transition: all .3s

      &:hover
        color: $text-hover !important
        transform: scale(1.1)

      +maxWidth768()
        zoom: .85

  &-title
    font-size: 2.57em

    +maxWidth768()
      font-size: 2em

h1.page-title
  & + .tag-cloud-list
    margin: 25px 10px
    text-align: left
    a
      font-weight: bold
      border: 1px solid var(--font-color)
      margin: .3rem .6rem
      border-radius: 8px
      -webkit-text-stroke: .35px #bccbe4
