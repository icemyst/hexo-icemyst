.category-lists
  .category-title
    font-size: 2.57em

    +maxWidth768()
      font-size: 2em

  .category-list

    a
      color: var(--font-color)

      &:hover
        color: $text-hover

    .category-list-count
      margin-left: 8px
      color: $theme-meta-color

      &:before
        content: '('

      &:after
        content: ')'

  ul
    // padding: 0 0 0 20px
    @extend .list-beauty

    ul
      padding-left: 4px

    li
      position: relative
